<%- include('partials/header') %>
<a class="btn btn-outline-dark btn-lg m-2" href="/devices" role="button">В личный кабинет</a>
<div class="container mt-4">
    <div class="row mt-5">
        <div class="col-md-8 mx-auto">
            <h1>Регистрация нового пользователя</h1>
            <div class="card">
                <div class="card-body">

                    <form action="/register" method="POST">
                        <div class="form-group">
                            <label for="text">Логин</label>
                            <input type="text" class="form-control" name="username">
                        </div>
                        <div class="form-group">
                            <label for="password">Пароль</label>
                            <input type="password" class="form-control" name="password">
                        </div>

                        <div class="form-check float-right ml-5">
                            <input type="checkbox" name="lead" value="1" class="form-check-input" id="lead">
                            <label class="form-check-label" for="is-boss">Руководитель</label>
                        </div>
                        <div class="form-check float-right">
                            <input type="checkbox" name="admin" value="1" class="form-check-input" id="admin">
                            <label class="form-check-label" for="is-admin">Администратор</label>
                        </div>

                        <button type="submit" class="btn btn-dark mt-3">Зарегистрировать</button>

                    </form>

                </div>
            </div>
        </div>

    </div>
</div>

<%- include('partials/header') %>
